---
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="max-w-2xl mx-auto px-6 pt-8 pb-6">
  <div class="flex justify-between items-center mb-2">
    <a
      href="/blog"
      class="text-5xl font-normal tracking-wide text-[#504945] dark:text-[#fabd2f]"
      style="font-family: 'Kirang Haerang', serif;"
      target="_self"
    >
      blog of skainswo
    </a>
    <ThemeToggle />
  </div>
  <nav
    class="flex items-center justify-between text-base"
    style="color: var(--blog-muted);"
  >
    <a href="/" class="hover:underline transition-colors" target="_self"
      >&larr;&nbsp;&nbsp;home</a
    >
    <div class="flex items-center gap-4">
      <a href="/blog/rss.xml" class="hover:underline transition-colors">rss</a>
      <span>·</span>
      <a href="/blog/atom.xml" class="hover:underline transition-colors">atom</a
      >
      <span>·</span>
      <a href="/blog/feed.json" class="hover:underline transition-colors"
        >json</a
      >
    </div>
  </nav>
  <div class="mt-6 flex items-center gap-4">
    <div class="flex-1 h-[4px]" style="background: var(--blog-border);"></div>
    <span style="color: var(--blog-border); font-family: 'Oi', serif;"
      >λ x . x x</span
    >
    <div class="flex-1 h-[4px]" style="background: var(--blog-border);"></div>
  </div>
</header>
